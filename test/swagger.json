{
  "swagger": "2.0",
  "host": "localhost",
  "schemes": ["http"],
  "info": {
    "version": "1.0.0",
    "title": "Pet store"
  },
  "basePath": "/v1",
  "paths": {
    "/pets": {
      "get": {
        "produces": [ "application/json" ],
        "responses": {
          "200": {
            "description": "Returns all the pets"
          }
        }
      }
    },
    "/pets/{id}": {
      "get": {
        "produces": [ "application/json" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The pet id",
            "type": "string",
            "required": true,
            "default": "fido3"
          },
          {
            "name": "deep",
            "in": "query",
            "description": "Whether to fetch the full object",
            "type": "boolean",
            "required": false,
	    "default": false
          }
        ],
        "responses": {
          "200": {
            "description": "Returns a single pet"
          }
        },
        "x-amples": [
          {
            "description": "get /pets/{id}: returns 200 for fido4",
            "request": {
              "params": {
                "id": "fido4"
              }
            },
            "responses": {
              "200": {
                "headers": {
                  "content-type": "application/json"
                }
              }
            }
          },
          {
            "request": {
              "params": {
                "id": "fido7",
                "deep": true
              }
            },
            "responses": {
              "200": {
                "headers": {
                  "content-type": "application/json"
                }
              }
            }
          }
        ]
      }
    }
  }
}
